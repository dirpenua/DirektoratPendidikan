<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/agenda_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal"
    android:elevation="3dp"
    android:background="@drawable/whiteround">

        <TextView
            android:id="@+id/jumlahakreditasi"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="123"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/judulakreditasi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="Judul akreditasi"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/linkwebview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:text="link webview"
            android:textSize="0sp"
            android:layout_weight="0"/>

        <ImageView
            android:id="@+id/swipe_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/ic_swipe_right"
            android:layout_weight="0"/>
</LinearLayout>


