<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_for_detail"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailBeasiswa">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark"
        android:elevation="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/prosedurkembali"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/onbackpress"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_collapseMode="parallax"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Prosedur"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp"/>


    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/whiteround"
        android:orientation="vertical"
        android:elevation="5dp">


        <TextView
            android:id="@+id/judulprosedur_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Prosedur"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textIsSelectable="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dipublikasikan pada "
                android:textSize="11dp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/tgl_publikasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tanggal "
                android:textSize="11dp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textStyle="italic"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gambarprosedur"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/klikgambar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="9dp"
                android:textColor="@color/colorAccent"
                android:textIsSelectable="true"/>

            <TextView
                android:id="@+id/kontenprosedurdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web|email"
                android:gravity="fill_horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:text="Konten"
                android:textSize="13dp"
                android:textColor="@color/colorAccent"
                android:textIsSelectable="true"/>
        </LinearLayout>

        </ScrollView>
    </LinearLayout>



</FrameLayout>