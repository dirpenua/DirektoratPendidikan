<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".mahasiswa.DisabilitasMhs">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Pendaftaran Relawan"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:textSize="16dp"
        android:text="Airlangga Inclusive Learning"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundwhite"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/namalengkaprelawan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:hint="Nama Lengkap"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="14dp"
                android:textColorHint="@color/colorPrimaryDark"
                android:drawableTint="@color/colorPrimaryDark"/>
        </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundwhite"
                android:layout_weight="1">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/namapanggilanrelawan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:hint="Nama Panggilan"
                    android:inputType="text"
                    android:textSize="14dp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:drawableTint="@color/colorPrimaryDark"/>
            </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/roundwhite"
                android:layout_weight="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/nimrelawan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:hint="NIM"
                        android:inputType="number"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:drawableTint="@color/colorPrimaryDark"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundwhite"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/alamatrumahrelawan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:hint="Alamat Rumah (sesuai KTP)"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="14dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:drawableTint="@color/colorPrimaryDark"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundwhite"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/alamatkosanrelawan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:hint="Alamat Kosan (jika ada)"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="14dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:drawableTint="@color/colorPrimaryDark"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundwhite"
                android:layout_weight="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/asalkotarelawan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:hint="Asal Kota/Kabupaten"
                        android:inputType="text"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:drawableTint="@color/colorPrimaryDark"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/roundwhite"
                android:layout_weight="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="4dp"

                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/asalprovrelawan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:hint="Asal Provinsi"
                        android:inputType="text"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:drawableTint="@color/colorPrimaryDark"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundwhite"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/nohprelawan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:hint="No HP (terhubung Whatsapp)"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="14dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:drawableTint="@color/colorPrimaryDark"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundwhite"
                android:layout_weight="0.5">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/fakultasrelawan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:hint="Fakultas"
                        android:inputType="text"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:drawableTint="@color/colorPrimaryDark"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/roundwhite"
                android:layout_weight="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/semesterrelawan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:hint="Semester"
                        android:inputType="number"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:drawableTint="@color/colorPrimaryDark"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundwhite"
                android:layout_weight="0.5">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/prodirelawan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:hint="Program Studi"
                        android:inputType="text"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:drawableTint="@color/colorPrimaryDark"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/roundwhite"
                android:layout_weight="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="4dp"

                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/ipkrelawan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:hint="IPK Terakhir"
                        android:inputType="numberDecimal"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:drawableTint="@color/colorPrimaryDark"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundwhite"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/prestasirelawan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:hint="Prestasi Akademik"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="14dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:drawableTint="@color/colorPrimaryDark"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/satutahun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="Saya bersedia menjadi relawan AIL selama 1 tahun"/>

        <CheckBox
            android:id="@+id/databenar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="Data yang telah saya isi adalah BENAR dan dapat dipertanggungjawabkan "/>


        <TextView
            android:id="@+id/daftarrelawan"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="SUBMIT"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:elevation="4dp"
            android:background="@drawable/rounddark"/>
    </LinearLayout>
</ScrollView>

</LinearLayout>