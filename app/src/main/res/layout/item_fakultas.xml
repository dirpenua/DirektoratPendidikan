<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:elevation="5dp"
    android:background="@drawable/whiteround">

        <ImageView
            android:id="@+id/gambarfakultas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/slider1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true"
            android:layout_weight="0">

        <TextView
            android:id="@+id/namafakultas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical"
            android:text="Nama Fakultas"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/hideapigmaps"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:textSize="0sp"
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/hidenotelp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:textSize="0sp"
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/hideemail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:textSize="0sp"
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/hidekampusfakultas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:textSize="0sp"
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/hidealamatfakultas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:textSize="0sp"
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/hidefaxfakultas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:textSize="0sp"
            android:layout_weight="0"/>

                <TextView
                    android:id="@+id/hideidfakultas"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible"
                    android:textSize="0sp"
                    android:layout_weight="0"/>


        </RelativeLayout>

</RelativeLayout>


